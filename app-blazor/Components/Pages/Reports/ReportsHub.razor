@page "/reports"

<h1>Reports Hub</h1>

<div class="row g-3 mb-3">
    <div class="col-12 col-md-4">
        <label class="form-label">Report Type</label>
        <select class="form-select">
            <option>Yellowbook</option>
            <option>ASB</option>
        </select>
    </div>
    <div class="col-12 col-md-4">
        <label class="form-label">Survey</label>
        <select class="form-select">
            <option>1001 Crop Yield</option>
            <option>1002 ACP</option>
            <option>1209 IWU</option>
        </select>
    </div>
    <div class="col-12 col-md-4">
        <label class="form-label">OMB Docket</label>
        <select class="form-select">
            <option>OMB-2026-001</option>
            <option>OMB-2026-014</option>
